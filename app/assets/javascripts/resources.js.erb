
$(document).ready(function(){
	$('button.new-endpoint-btn').click(function(event){
		$(this).siblings('div.new-endpoint-container').removeClass('hidden');
		$(this).hide();
	});

	$('tr.endpoint-row').mouseover(function(event){
		$(this).find('div.edit-btn-div').removeClass('v-hidden');
	});

	$('tr.endpoint-row').mouseleave(function(event){
		$(this).find('div.edit-btn-div').addClass('v-hidden');
	});
});