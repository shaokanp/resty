<% javascript_include_tag "application" %>

<div id="global-container">
	<h1><%=@endpoint.method_type + ' ' + @endpoint.url%></h1>

	<p>
	  	<strong>Description</strong><br>
	  	<%= @endpoint.description %>
	</p>

	<p>
	  	<strong>Detail</strong><br>
	  	<%= @endpoint.detail %>
	</p>

	<p>
		<strong>Parameters</strong><br>
			<table id="parameters">
		  		<%= render @endpoint.parameters %>
		  	</table>
		  	<div class="new-form-container hidden">
			      <%= form_for([@project, @endpoint, Parameter.new], remote:true) do |f| %>
			        <div class="field">
			            <%= f.text_field :name , class: "name-input-field" , placeholder: "Name"%>
			            <%= f.text_field :example_value , class: "example-input-field" , placeholder: "Example Value"%>
			            <%= f.text_area :description , class: "description-input-field" , placeholder: "Description"%>
			        </div>
			        <div class="actions">
			        	<%= f.submit %>
			        </div>
			      <% end %>
			  <button class="cancel-creation">Cancel</button>
			</div>

			<button class="new-row-btn">New Parameter</button>

	</p>
<div style="margin: 0 auto 0 auto; width:800px;">
