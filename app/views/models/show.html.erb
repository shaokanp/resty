<% javascript_include_tag "application" %>

<div id="global-container">
  <h1><%=@model.name %></h1>

  <p>
    <strong>Description</strong><br>
    <%= @model.description %>
  </p>

  <p>
    <strong>Parameters</strong><br>
  <table id="parameters">
    <% @param_container = @model %>
    <%= render @model.parameters %>
  </table>
  <div class="new-form-container hidden">
    <%= form_for([@project, @model, Parameter.new], remote:true, authenticity_token: form_authenticity_token) do |f| %>
        <div class="field">
          <%= f.text_field :name , class: 'name-input-field' , placeholder: 'Name'%>
          <%= f.text_area :description , class: 'description-input-field' , placeholder: 'Description'%>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
    <button class="cancel-creation">Cancel</button>
  </div>

  <button class="new-row-btn">New Parameter</button>

  </p>
</div>
