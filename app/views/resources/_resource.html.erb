<%= div_for resource do %>
  	<table>
	  <caption class="resource-title">
	  	<div>
		  	<strong><%=resource.name%></strong> <!-- <%= link_to 'Show', resource %> <%= link_to 'Edit', edit_resource_path(resource) %> <%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %> -->
		    <br><span class="description"><%=resource.description%></span>
		</div>
		<div class="edit-btn-div v-hidden">
			<%= link_to 'Delete', resource_path(resource.id), method: :delete, remote: true %>
		</div>
	  </caption>
	  <thead>
	    <tr>
	      <th>
	        Endpoints        
	      </th>
	      <th>
	        Description        
	      </th>
	    </tr>
	  </thead>
	  <tbody class="endpoints">
	  	<%= render resource.endpoints %>
	  </tbody>
	</table>
	<br>
	<div class="new-form-container hidden">
	      <%= form_for([@project,Endpoint.new], remote:true) do |f| %>
	        <div class="field">
	            <%= f.text_field :method_type %>
	            <%= f.text_field :url %>
	            <%= f.text_field :description %>
	            <%= f.hidden_field :resource_id, :value => resource.id %>
	        </div>
	        <div class="actions">
	        	<%= f.submit %>
	        </div>
	      <% end %>
	      <button class="cancel-creation">Cancel</button>
	</div>
	<button class="new-row-btn">New Endpoint</button>
	<br>
	<br>
	<br>
<% end %>