<% javascript_include_tag "application" %>

<h1>Restful API</h1>

<div id="global-container">
  <div id="model-container">
      <table>
        <caption class="model-title">
          Models
        </caption>
        <thead>
        <tr>
          <th>
            Model
          </th>
          <th>
            Description
          </th>
          <th>
          </th>
        </tr>
        </thead>
        <tbody class="models">
            <%= render @project.models %>
        </tbody>
      </table>
      <div class="new-form-container hidden">
        <%= form_for([@project,Model.new], remote:true, authenticity_token: form_authenticity_token) do |f| %>
            <div class="field">
              <%= f.text_field :method_type , class: "type-input-field" , placeholder: "Method Type" %>
              <%= f.text_field :url , class: "url-input-field" , placeholder: "URI" %>
              <%= f.text_area :description , class: "description-input-field" , placeholder: "Description" %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
        <% end %>
        <button class="cancel-creation">Cancel</button>
      </div>
      <button class="new-row-btn">New Model</button>
      <br>
      <br>
      <br>
  </div>


  <div class="new-form-container hidden">
      <%= form_for(Resource.new, remote:true) do |f| %>
          <div class="field">
            <%= f.text_field :name %>
            <%= f.text_field :description %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
      <% end %>
      <button class="cancel-creation">Cancel</button>
  </div>
  <button class="new-row-btn">New Resource</button>
  <div id="resources">
    <%= render @resources %>
  </div>
</div>
